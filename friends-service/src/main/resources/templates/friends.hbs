{{#partial "content" }}
<h2>My Friends!!</h2>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Since</th>
      </tr>
    </thead>
    <tbody>
      {{#each friends as |friend|}}
      <tr>
        <td>{{friend.firstName}}</td>
        <td>{{friend.since}}</td>
      </tr>
      {{/each}}

    </tbody>
  </table>
  <span>The current host is {{hostname}}</span>
</div>
{{/partial}} {{> layout.hbs}}
